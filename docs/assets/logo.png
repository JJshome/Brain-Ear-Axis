<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg width="600" height="300" viewBox="0 0 600 300" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect x="0" y="0" width="600" height="300" rx="15" ry="15" fill="#f8f9fa" />
  
  <!-- Title Text -->
  <text x="300" y="60" font-family="Arial" font-size="36" font-weight="bold" text-anchor="middle" fill="#333">
    Brain-Ear Axis
  </text>
  <text x="300" y="90" font-family="Arial" font-size="18" text-anchor="middle" fill="#666">
    Research Platform
  </text>
  
  <!-- Brain icon (left) -->
  <g transform="translate(180, 170)">
    <ellipse cx="0" cy="0" rx="70" ry="60" fill="#ff7e79" stroke="#333" stroke-width="1.5">
      <animate attributeName="rx" values="70;72;70" dur="3s" repeatCount="indefinite" />
      <animate attributeName="ry" values="60;62;60" dur="3s" repeatCount="indefinite" />
    </ellipse>
    
    <!-- Brain details -->
    <path d="M-40,-20 Q-20,-40 0,-30 Q20,-40 40,-20" fill="none" stroke="#333" stroke-width="1">
      <animate attributeName="d" values="M-40,-20 Q-20,-40 0,-30 Q20,-40 40,-20;M-41,-21 Q-21,-41 0,-31 Q21,-41 41,-21;M-40,-20 Q-20,-40 0,-30 Q20,-40 40,-20" dur="3s" repeatCount="indefinite" />
    </path>
    <path d="M-40,10 Q-20,30 0,25 Q20,30 40,10" fill="none" stroke="#333" stroke-width="1">
      <animate attributeName="d" values="M-40,10 Q-20,30 0,25 Q20,30 40,10;M-41,11 Q-21,31 0,26 Q21,31 41,11;M-40,10 Q-20,30 0,25 Q20,30 40,10" dur="3s" repeatCount="indefinite" />
    </path>
    
    <!-- Neural activity dots -->
    <g>
      <circle cx="-30" cy="-25" r="3" fill="#ffcc5c">
        <animate attributeName="opacity" values="0.2;1;0.2" dur="1.5s" repeatCount="indefinite" />
      </circle>
      <circle cx="25" cy="-15" r="2.5" fill="#ffcc5c">
        <animate attributeName="opacity" values="0.2;1;0.2" dur="2s" repeatCount="indefinite" />
      </circle>
      <circle cx="10" cy="20" r="3" fill="#ffcc5c">
        <animate attributeName="opacity" values="0.2;1;0.2" dur="1.7s" repeatCount="indefinite" />
      </circle>
      <circle cx="-20" cy="15" r="2" fill="#ffcc5c">
        <animate attributeName="opacity" values="0.2;1;0.2" dur="1.3s" repeatCount="indefinite" />
      </circle>
    </g>
  </g>
  
  <!-- Ear icon (right) -->
  <g transform="translate(420, 170)">
    <!-- Outer ear -->
    <path d="M-30,-40 C-20,-55 -5,-60 10,-50 C25,-40 30,-20 30,0 C30,20 20,35 5,40 C-5,45 -15,45 -25,40 C-40,30 -45,15 -45,0 C-45,-15 -40,-30 -30,-40 Z" fill="#88d8b0" stroke="#333" stroke-width="1.5">
      <animate attributeName="d" values="M-30,-40 C-20,-55 -5,-60 10,-50 C25,-40 30,-20 30,0 C30,20 20,35 5,40 C-5,45 -15,45 -25,40 C-40,30 -45,15 -45,0 C-45,-15 -40,-30 -30,-40 Z;M-31,-41 C-21,-56 -6,-61 9,-51 C24,-41 29,-21 29,0 C29,20 19,36 4,41 C-6,46 -16,46 -26,41 C-41,31 -46,16 -46,0 C-46,-15 -41,-31 -31,-41 Z;M-30,-40 C-20,-55 -5,-60 10,-50 C25,-40 30,-20 30,0 C30,20 20,35 5,40 C-5,45 -15,45 -25,40 C-40,30 -45,15 -45,0 C-45,-15 -40,-30 -30,-40 Z" dur="3s" repeatCount="indefinite" />
    </path>
    
    <!-- Inner ear canal -->
    <path d="M-15,0 L-45,0" fill="none" stroke="#333" stroke-width="2" />
    
    <!-- Ear drum -->
    <ellipse cx="-45" cy="0" rx="3" ry="10" fill="#ffeead" stroke="#333" stroke-width="1">
      <animate attributeName="ry" values="10;11;10" dur="1.5s" repeatCount="indefinite" />
    </ellipse>
    
    <!-- Cochlea (simplified) -->
    <path d="M-55,0 C-65,5 -70,0 -75,-5 C-80,-10 -80,-20 -70,-22 C-65,-25 -60,-15 -55,-10 C-55,-5 -55,0 -55,0 Z" fill="#ff6b6b" stroke="#333" stroke-width="1">
      <animate attributeName="d" values="M-55,0 C-65,5 -70,0 -75,-5 C-80,-10 -80,-20 -70,-22 C-65,-25 -60,-15 -55,-10 C-55,-5 -55,0 -55,0 Z;M-55,0 C-65,5 -71,0 -76,-5 C-81,-10 -81,-20 -70,-23 C-65,-26 -60,-16 -55,-11 C-55,-6 -55,0 -55,0 Z;M-55,0 C-65,5 -70,0 -75,-5 C-80,-10 -80,-20 -70,-22 C-65,-25 -60,-15 -55,-10 C-55,-5 -55,0 -55,0 Z" dur="2.5s" repeatCount="indefinite" />
    </path>
  </g>
  
  <!-- Connection between brain and ear -->
  <g>
    <!-- Connecting line -->
    <path d="M250,170 C285,140 355,140 390,170" stroke="#4a6fa5" stroke-width="3" fill="none" stroke-dasharray="5,5">
      <animate attributeName="stroke-dashoffset" values="20;0" dur="3s" repeatCount="indefinite" />
    </path>
    
    <!-- Moving pulse -->
    <circle cx="300" cy="150" r="4" fill="#ffcc5c">
      <animate attributeName="cx" values="250;390" dur="2s" repeatCount="indefinite" />
      <animate attributeName="cy" values="170;170" dur="2s" repeatCount="indefinite" />
      <animate attributeName="opacity" values="0;1;0" dur="2s" repeatCount="indefinite" />
    </circle>
  </g>
  
  <!-- Subtitle -->
  <text x="300" y="260" font-family="Arial" font-size="14" text-anchor="middle" fill="#666">
    Integrated Analysis of Neural Signals, Microbiome, and Connectivity
  </text>
</svg>
